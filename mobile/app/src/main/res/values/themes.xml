<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GTA_SIRO_MOBILE" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>
    <!-- Bottom naviation view -->
    <style name="BottomNavigationBarStyle" parent="Widget.Design.BottomNavigationView">
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="BottomNavigationItem" parent="Widget.Design.BottomNavigationView">
        <item name="android:textColor">@android:color/transparent</item>
    </style>
</resources>